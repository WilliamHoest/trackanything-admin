# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_service_role_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Database URL for SQLAlchemy (direct connection to Supabase)
DATABASE_URL=postgresql://postgres:your_password@db.your-project.supabase.co:5432/postgres

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# AI API KEY
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# News Scraping APIs
GNEWS_API_KEY=your_gnews_api_key_here
GNEWS_MAX_RESULTS=10
SERPAPI_KEY=your_serpapi_key_here

# Optional web search for AI tools
TAVILY_API_KEY=

# Scraping provider toggles
SCRAPING_PROVIDER_GNEWS_ENABLED=true
SCRAPING_PROVIDER_SERPAPI_ENABLED=true
SCRAPING_PROVIDER_CONFIGURABLE_ENABLED=true
SCRAPING_PROVIDER_RSS_ENABLED=true

# Scraping guardrails and throttling
SCRAPING_RATE_HTML_RPS=1.5
SCRAPING_RATE_API_RPS=3.0
SCRAPING_RATE_RSS_RPS=2.0
SCRAPING_MAX_KEYWORDS_PER_RUN=50
SCRAPING_MAX_TOTAL_URLS_PER_RUN=200
SCRAPING_BLIND_DOMAIN_CIRCUIT_THRESHOLD=8
SCRAPING_USE_SCRAPLING=true
SCRAPING_STEALTHY_FETCHER_ENABLED=false
SCRAPING_ADAPTIVE_SELECTOR_ENABLED=false
SCRAPING_STEALTHY_SESSION_ENABLED=false
SCRAPING_STEALTHY_SESSION_MAX_PAGES=3
SCRAPING_STEALTHY_SESSION_TIMEOUT_MS=30000
SCRAPING_STEALTHY_SESSION_SOLVE_CLOUDFLARE=true
SCRAPING_STEALTHY_SESSION_DISABLE_RESOURCES=false
SCRAPING_STEALTHY_SESSION_BLOCK_WEBRTC=true
SCRAPING_STEALTHY_SESSION_RETRIES=1
